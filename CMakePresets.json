{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "description": "For more information: http://aka.ms/cmakepresetsvs",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "/usr/local",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": true,
        "CMAKE_CXX_EXTENSIONS": false,
        "CMAKE_C_COMPILER": "/usr/bin/gcc",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "debug",
      "displayName": "linux-debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "linux-release",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "cross-zero",
      "displayName": "linux-cross-zero",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/build/${presetName}/install",
      "toolchainFile": "${sourceDir}/cmake/crossarmv6l.cmake",
      "cacheVariables": {
        "RASPBERRY_VERSION": "1",
        "PATH_INSTALLDIR": "${sourceDir}/out/build/${presetName}/install",
        "CMAKE_BUILD_TYPE": "Debug",
        "IPTARGET": "192.168.2.145",
        "USER": "root",
        "PASSWORD": "123"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "cross-raspi4",
      "displayName": "linux-cross-raspi4",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/build/${presetName}/install",
      "toolchainFile": "${sourceDir}/cmake/crossraspi64.cmake",
      "cacheVariables": {
        "RASPBERRY_VERSION": "4",
        "PATH_INSTALLDIR": "${sourceDir}/out/build/${presetName}/install",
        "CMAKE_BUILD_TYPE": "Debug",
        "IPTARGET": "192.168.2.145",
        "USER": "root",
        "PASSWORD": "123"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
  ],
  "buildPresets": [],
  "testPresets": []
}
